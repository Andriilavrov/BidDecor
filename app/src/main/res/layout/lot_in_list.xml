<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="#C8B8B8"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    >

    <ImageView
        android:id="@+id/lotImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/table" />

    <TextView
        android:id="@+id/lotTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/lotPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#5E2818"
        android:text="TextView" />

    <TextView
        android:id="@+id/lotDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:text="TextView" />

    <Button
        android:id="@+id/lotButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Переглянути"
        app:cornerRadius="20dp"
        />
</LinearLayout>